            <a class="btn btn-danger delete"
               data-id="@contact.ContactId"
               data-controller="Contacts"
               data-action="Destroy"
               data-body-message="Are u sure to delete @contact.LastName?"
               >Delete</a>
                *@
            </td>
        </tr>
                }
            </tbody>
        </table>
        <p><a asp-controller="Contacts" asp-action="Create" class="btn btn-success">ADD A NEW CONTACT</a></p>


