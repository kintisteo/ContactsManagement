@model ContactsManagement.Models.Contact

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Contact</h2>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Contacts" asp-action="Edit">
            <input type="hidden" asp-for="ContactId" />

            @await Html.PartialAsync("_PartialContact", Model)

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Contact's List</a>
</div>
